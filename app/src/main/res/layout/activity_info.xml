<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <Button
        android:id="@+id/ret_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="600dp"
        android:text="Вернутся"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="62dp"
        android:layout_height="22dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="32dp"

        android:text="Имя"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/macText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="@+id/nameText"
        app:layout_constraintTop_toTopOf="@+id/nameText"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/classText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Класс"
        app:layout_constraintLeft_toLeftOf="@+id/macText"
        app:layout_constraintTop_toTopOf="@+id/macText"
        tools:layout_editor_absoluteX="21dp" />

    <TextView
        android:id="@+id/bondText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Состояние связи"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="@+id/classText"
        app:layout_constraintTop_toTopOf="@+id/classText"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="111dp" />

    <TextView
        android:id="@+id/typeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тип устройства"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="@+id/bondText"
        app:layout_constraintTop_toTopOf="@+id/bondText"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="136dp" />

    <TextView
        android:id="@+id/nameTextV"
        android:layout_width="160dp"
        android:layout_height="21dp"
        android:text="TextView"
        android:layout_marginLeft="60dp"
        app:layout_constraintTop_toTopOf="@+id/nameText"
        app:layout_constraintLeft_toRightOf="@+id/nameText"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="32dp" />

    <TextView
        android:id="@+id/macTextV"
        android:layout_width="159dp"
        android:layout_height="18dp"
        android:text="TextView"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="@+id/nameTextV"
        app:layout_constraintLeft_toLeftOf="@+id/nameTextV"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/classTextV"
        android:layout_width="157dp"
        android:layout_height="21dp"
        android:text="TextView"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="@+id/macTextV"
        app:layout_constraintLeft_toLeftOf="@+id/macTextV"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="84dp" />
    <TextView
        android:id="@+id/bondTextV"
        android:layout_width="161dp"
        android:layout_height="20dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="@+id/classTextV"
        app:layout_constraintLeft_toLeftOf="@+id/classTextV"
        android:text="TextView"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="111dp" />

    <TextView
        android:id="@+id/typeTextV"
        android:layout_width="164dp"
        android:layout_height="20dp"
        android:text="TextView"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="@+id/bondTextV"
        app:layout_constraintLeft_toLeftOf="@+id/bondTextV"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="137dp" />


</androidx.constraintlayout.widget.ConstraintLayout>